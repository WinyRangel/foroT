<div class="card bg-dark text-white" style="box-shadow: 0 0 20px #4f9;">

  <div class="card-header d-flex align-items-center">
    <span class="material-icons me-2">
      cloud_upload
    </span>
    Cargar Imágen
  </div>

  {{! IMAGE UPLOAD FORM }}
  <div class="card-body p-5">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <input
          type="file"
          name="image"
          class="form-control text-dark border-success"
          required
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          name="title"
          class="form-control text-dark border border-success"
          placeholder="Título"
          required
        />
      </div>

      <div class="mb-3">
        <textarea
          name="description"
          rows="2"
          class="form-control text-dark border border-success"
          placeholder="Descripción"
          required
        ></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i>
          Publicar
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt-2 bg-dark text-white" style="box-shadow: 0 0 20px #4f9;">
  <div class="card-header d-flex align-items-center">
    <span class="material-icons me-2">
      cloud
    </span>
    Publicadas recientemente
  </div>
  <div class="card-body p-5">
    <div class="row">
      {{#each images}}
        <div class="col-md-4 text-center">
          <a href="/images/{{uniqueId}}">
            <img
              src="/uploads/{{filename}}"
              alt="{{title}}"
              class="w-100 h-100"
              style="object-fit: cover;"
            />
          </a>
        </div>
      {{else}}
        <div class="text-light text-center p-5">
          <h1 class="text-light">No existe contenido<strong>aún</strong></h1>
          <p>Carga tu primer contenido</p>
          <span class="material-icons" style="font-size: 7rem; box-shadow: 0 0 20px #4f9;"">
            añadir imágen
          </span>
        </div>
      {{/each}}
    </div>
  </div>
</div>